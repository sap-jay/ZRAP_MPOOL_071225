projection;
strict ( 2 );
use draft;

define behavior for ZC_PurchaseOrderHeader alias _header
use etag
{
  use create;
  use update;
  use delete;

  use action  Edit;
  use action Activate;
  use action Discard ;
  use action Resume;
  use action Prepare;

  use association _item { create; }
}

define behavior for ZC_PurchaseOrderItem alias _item
use etag
{
  use update;
  use delete;

  use association _header;
}